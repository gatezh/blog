{
  "$schema": "node_modules/wrangler/config-schema.json",
  "name": "gatezh-com-email-worker",
  "main": "src/index.ts",
  "compatibility_date": "2025-01-03",
  "compatibility_flags": [
    "nodejs_compat"
  ],
  "vars": {
    // TO_EMAIL and FROM_EMAIL are set in the Cloudflare Dashboard.
    // Do not set them here â€” values in this file override dashboard settings on deploy.

    // Allowed CORS origin for the contact form
    "ALLOWED_ORIGIN": "https://gatezh.com"
  },
  "observability": {
    "enabled": false,
    "logs": {
      "enabled": true
    }
  }
  // Secrets (set via `wrangler secret put`):
  // - RESEND_API_KEY: Your Resend API key
  // - TURNSTILE_SECRET_KEY: Your Cloudflare Turnstile secret key
}