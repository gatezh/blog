{
  "name": "Claude Code Sandbox",
  "build": {
    "dockerfile": "Dockerfile",
    "context": "../..",
    "args": {
      "TZ": "${localEnv:TZ:America/Los_Angeles}",
      "CLAUDE_CODE_VERSION": "latest",
      "GIT_DELTA_VERSION": "0.18.2",
      "ZSH_IN_DOCKER_VERSION": "1.2.0"
    }
  },
  "runArgs": ["--cap-add=NET_ADMIN", "--cap-add=NET_RAW"],
  "customizations": {
    "vscode": {
      "extensions": [
        // **Disabled user extensions** (prevent syncing from host)
        // GitHub Pull Requests - PR management (requires SSH keys not available in container)
        "-github.vscode-pull-request-github",

        // **Theme**
        // Claude Theme - VS Code color theme by Sami Hindi
        "SamiHindi.claude-theme-sami-hindi",

        // **AI Agents**
        // Claude Code
        "anthropic.claude-code",
        // OpenAI Codex
        "openai.chatgpt",

        // **General**
        // Code Spell Checker - Spell checking
        "streetsidesoftware.code-spell-checker",
        // YAML - YAML support
        "redhat.vscode-yaml",
        // Markdown Preview Github Styles - Markdown preview
        "bierner.markdown-preview-github-styles",

        // **JS**
        // Bun VS Code
        "oven.bun-vscode",
        // NPM Intellisense - NPM package intellisense
        "christian-kohler.npm-intellisense",
        // TS Error Translator - Translates TypeScript errors
        "mattpocock.ts-error-translator",

        // **Linting/Formatting**
        // OXC - Rust-based linter and formatter
        "oxc.oxc-vscode",

        // **CSS**
        // Color Info - Provides color information
        "bierner.color-info",
        // Colorize - Colorizes code
        "kamikillerto.vscode-colorize",
        // Tailwind Fold - Tailwind CSS utility
        "stivo.tailwind-fold",
        // Tailwind CSS IntelliSense - Tailwind CSS support
        "bradlc.vscode-tailwindcss"
      ],
      "settings": {
        "window.title": "${localWorkspaceFolderBasename}",
        "workbench.colorTheme": "Claude Dark",
        "workbench.colorCustomizations": {
          "statusBarItem.remoteBackground": "#C15F3C",
          "statusBarItem.remoteForeground": "#ffffff"
        },
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "oxc.oxc-vscode",
        "editor.codeActionsOnSave": {
          "source.fixAll.oxc": "explicit",
          "source.organizeImports.oxc": "explicit"
        },
        "terminal.integrated.defaultProfile.linux": "zsh",
        "terminal.integrated.profiles.linux": {
          "bash": {
            "path": "bash",
            "icon": "terminal-bash"
          },
          "zsh": {
            "path": "zsh"
          }
        }
      }
    }
  },
  "remoteUser": "node",
  "mounts": [
    "source=claude-code-bashhistory-${devcontainerId},target=/commandhistory,type=volume",
    "source=claude-code-config-${devcontainerId},target=/home/node/.claude,type=volume"
  ],
  "containerEnv": {
    "NODE_OPTIONS": "--max-old-space-size=4096",
    "CLAUDE_CONFIG_DIR": "/home/node/.claude",
    "POWERLEVEL9K_DISABLE_GITSTATUS": "true"
  },
  "workspaceMount": "source=${localWorkspaceFolder},target=/workspace,type=bind,consistency=delegated",
  "workspaceFolder": "/workspace",
  // Initialize Claude Code plugins (runs once when container is created)
  "postCreateCommand": "bash /workspace/.devcontainer/claude-node-bun/init-plugins.sh",
  // Symlink .codex to home dir so Codex extension can find custom prompts (it only reads ~/.codex)
  "postStartCommand": "sudo /usr/local/bin/init-firewall.sh && ln -sfn /workspace/.codex ~/.codex",
  "waitFor": "postStartCommand"
}
