{
  "name": "gatezh-blog",
  "version": "1.0.0",
  "description": "Personal blog with Hugo and Cloudflare Workers",
  "private": true,
  "scripts": {
    "dev": "hugo server -D",
    "build": "bun run build:css && hugo",
    "build:css": "tailwindcss -i ./assets/css/input.css -o ./static/css/tailwind.css --minify",
    "watch:css": "tailwindcss -i ./assets/css/input.css -o ./static/css/tailwind.css --watch"
  },
  "devDependencies": {
    "@tailwindcss/cli": "4.0.0-beta.7"
  },
  "dependencies": {}
}
