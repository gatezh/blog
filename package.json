{
  "name": "gatezh-com-monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": ["services/*"],
  "scripts": {
    "dev": "bun run --cwd services/www dev",
    "dev:worker": "bun run --cwd services/email-worker dev",
    "build": "bun run --cwd services/www build",
    "build:worker": "bun run --cwd services/email-worker build",
    "deploy:web": "bun run --cwd services/www deploy",
    "deploy:worker": "bun run --cwd services/email-worker deploy",
    "deploy": "bun run deploy:web && bun run deploy:worker",
    "lint": "bunx oxlint"
  },
  "devDependencies": {
    "oxlint": "1.48.0"
  }
}
